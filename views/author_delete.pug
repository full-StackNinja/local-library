extends layout

block content
  h1 Author: #{author.family_name}, #{author.first_name}
  p #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}

  if !authorBooks.length
    p Do you really want to delete this author?
    form(method='POST')
      button.btn.btn-primary(type='submit') Submit
  else
    p(style="margin-bottom:30px;") #[em #[strong Delete following books before deleting the author:]]
    h3(style="margin-bottom:50px;") Books
    dl
      for book in authorBooks
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}
      



  