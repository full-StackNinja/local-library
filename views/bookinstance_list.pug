extends layout

block content
  h1=title
  ul
    each bookinstance in bookinstance_list
      li
        a(href=bookinstance.url) #{bookinstance.book.title} : #{bookinstance.imprint} -&nbsp;
        if bookinstance.status ==='Available'
          span.available #{bookinstance.status}
        else if bookinstance.status === 'Maintenance'
          span.maintenance #{bookinstance.status}
        else
          span.loaned #{bookinstance.status}
        if bookinstance.status !== 'Available'
          span (Due: #{bookinstance.due_back})
