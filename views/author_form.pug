extends layout 

block content
  h1= title

  form(method='post')
    div.form-group
      label(for='first_name') #[strong First Name:] 
      input#first_name.form-control(type='text' placeholder='First Name(Christian)' name= 'first_name' required value=(undefined===author?'':author.first_name) )
      label(for='family_name') #[strong Family Name:]
      input#family_name.form-control(type='text' placeholder='Family Name' name='family_name' required value=(undefined===author?'':author.family_name))

      label(for='date_of_birth') #[strong Date of Birth:]
      input#date_of_birth.form-control(type='date' placeholder='mm/dd/yyyy' name='date_of_birth' value=(undefined===author || null===author.date_of_death?'':author.date_of_birth.toISOString().slice(0,10)))

      label(for='date_of_death') #[strong Date of Death:]
      input#date_of_death.form-control(type='date' placeholder='mm/dd/yyyy' name='date_of_death' value=(undefined===author || null===author.date_of_death?'': author.date_of_death.toISOString().slice(0,10)))
      button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      each error in errors
        li.error!=error.msg